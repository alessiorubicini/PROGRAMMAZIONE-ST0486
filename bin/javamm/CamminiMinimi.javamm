int cerca(int s, int t, int [][] g) {
  if (s==t) return 0; else {
      int min = 999999;
      for (int i = 0; i < (g[s].length)/2; i++) {
         int p = g[s][i*2+1]+cerca(g[s][i*2],t,g);
         if (p<min) min = p;
      }
      return min;
   }
}

