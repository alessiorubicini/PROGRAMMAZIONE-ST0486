 */

boolean pari(int n) {
	if(n == 0) return true; else return dispari(n - 1);
}

boolean dispari(int n) {
	if(n == 0) return false; else return pari(n - 1);
}

System.out.println(pari(8));
System.out.println(pari(3));
System.out.println(dispari(7));
